@model EbookPlatform.Publisher

@{
    ViewData["Title"] = "AddPublisher";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 mt-4 p-3">
    <div class="card-box">



        <form method="post" asp-area="Admin" asp-controller="Publishers" asp-action="Create" style="margin-top:5%;">
            <div class="form-group">
                <label asp-for="publisherFullName" for=""></label>
                <input asp-for="publisherFullName" type="text" parsley-trigger="change" placeholder=" " class="form-control" id="emailAddress" data-parsley-id="6">
                <span asp-validation-for="publisherFullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="description"></label>
                <input type="text" class="form-control" asp-for="description">
                <span class="text-danger" asp-validation-for="description"></span>
            </div>

            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a asp-action="Index" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>

