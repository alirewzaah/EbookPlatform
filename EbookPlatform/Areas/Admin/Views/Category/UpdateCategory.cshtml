@model EbookPlatform.Category
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 mt-4 p-3">
    <div class="card-box">



        <form asp-action="UpdateCategory" method="post" style="margin-top:5%;" enctype="multipart/form-data">
            <input type="hidden" asp-for="categoryID" value=@Model.categoryID />
            <input type="hidden" asp-for="parentID" value=@Model.parentID />
            <div class="form-group">
                <label asp-for="title" for="emailAddress"></label>
                <input asp-for="title" type="text" parsley-trigger="change" placeholder="" class="form-control" id="emailAddress" data-parsley-id="6" value=@Model.title>
                <span asp-validation-for="title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="description" for="emailAddress"></label>
                <input asp-for="description" type="text" parsley-trigger="change" placeholder=" " class="form-control" id="emailAddress" data-parsley-id="6" value=@Model.description>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>

            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a asp-action="Index" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>

