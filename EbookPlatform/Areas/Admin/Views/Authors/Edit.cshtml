@model EbookPlatform.Author

@{
    ViewData["Title"] = "EditAuthor";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 mt-4 p-3">
    <div class="card-box">



        <form method="post" asp-area="Admin" asp-controller="Authors" asp-action="Edit" style="margin-top:5%;">
            <div class="form-group">
                <label>نام</label>
                <input type="text" class="form-control" name="authorFullName" value="@Model.authorFullName">
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>توضیحات</label>
                <input type="text" class="form-control" name="Description" value="@Model.Description">
                <span class="text-danger"></span>
            </div>

            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a asp-action="Index" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>

