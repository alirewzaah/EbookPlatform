@model EbookPlatform.Author

@{
    ViewData["Title"] = "AddAuthor";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 mt-4 p-3">
    <div class="card-box">



        <form method="post" asp-area="Admin" asp-controller="Authors" asp-action="Create" style="margin-top:5%;" >
            <div class="form-group">
                <label asp-for="authorFullName">نام</label>
                <input asp-for="authorFullName" type="text" parsley-trigger="change" placeholder=" " class="form-control" id="emailAddress" data-parsley-id="6">
                <span asp-validation-for="authorFullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">توضیحات</label>
                <input asp-for="Description" type="text" parsley-trigger="change" placeholder=" " class="form-control" id="emailAddress" data-parsley-id="6">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a asp-action="Index" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>

