@model EbookPlatform.Core.ViewModels.ForgotPasswordViewmodel      
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ثبت نام</title>
    <!-- font---------------------------------------->
    <link rel="stylesheet" href="/CssSite/assets/Css/vendor/font-awesome.min.css">
    <link rel="stylesheet" href="/CssSite/assets/Css/vendor/materialdesignicons.css">
    <!-- plugin-------------------------------------->
    <link rel="stylesheet" href="/CssSite/assets/Css/vendor/bootstrap.css">
    <link rel="stylesheet" href="/CssSite/assets/Css/vendor/owl.carousel.min.css">
    <link rel="stylesheet" href="/CssSite/assets/Css/vendor/noUISlider.min.css">
    <!-- main-style---------------------------------->
    <link rel="stylesheet" href="/CssSite/assets/Css/main.css">
</head>
<body>

    <!-- login----------------------------------->
    <div class="container">
        <div class="row">
            <div class="col-lg">
                <section class="page-account-box">
                    <div class="col-lg-6 col-md-6 col-xs-12 mx-auto">
                        @if (TempData["Result"] != null)
                        {
                            if (TempData["Result"].ToString() == "true")
                            {
                                <div class="alert alert-success alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                    ثبت اطلاعات با موفقیت انجام شد .
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                    token expired   .
                                </div>
                            }
                        }

                      
                        <div class="ds-userlogin">
                            <a href="#" class="account-box-logo">digismart</a>
                            <div class="account-box">
                                <div class="Login-to-account mt-4">
                                    <div class="account-box-content">
                                        <h4 class="mb-2">تغییر رمز عبور</h4>
                                        <form asp-action="Recovery" method="post" class="form-account text-right">
                                            <input type="hidden" asp-for="Email" />
                                            <div class="form-account-title">
                                                <label for="password">رمز عبور جدید</label>
                                                <input class="password-input" asp-for="Password">
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>

                                            <div class="form-account-title">
                                                <label for="password">تکرار رمز عبور جدید</label>
                                                <input asp-for="Confirmpassword" class="password-input">
                                                <span asp-validation-for="Confirmpassword" class="text-danger"></span>
                                            </div>
                                            <div class="form-row-account">
                                                <button class="btn btn-primary btn-login">تغییر رمز عبور</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <!-- login----------------------------------->
    <!-- scroll_Progress------------------------->
    <div class="progress-wrap">
        <svg class="progress-circle svg-content" width="100%" height="100%" viewBox="-1 -1 102 102">
            <path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98" />
        </svg>
    </div>
    <!-- scroll_Progress------------------------->
    <script src="/CssSite/assets/JS/vendor/jquery-3.2.1.min.js"></script>
    <script src="/CssSite/assets/JS/vendor/bootstrap.js"></script>
    <!-- plugin----------------------------------------------------->
    <script src="/CssSite/assets/JS/vendor/owl.carousel.min.js"></script>
    <script src="/CssSite/assets/JS/vendor/jquery.countdown.js"></script>
    <script src="/CssSite/assets/JS/vendor/ResizeSensor.min.js"></script>
    <script src="/CssSite/assets/JS/vendor/theia-sticky-sidebar.min.js"></script>
    <script src="/CssSite/assets/JS/vendor/wNumb.js"></script>
    <script src="/CssSite/assets/JS/vendor/nouislider.min.js"></script>
    <!-- main js---------------------------------------------------->
    <script src="/CssSite/assets/JS/main.js"></script>
</body>
<!-- file js---------------------------------------------------->

</html>